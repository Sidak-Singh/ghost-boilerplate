{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "commands": [
            "npm install -g yarn@1.22.19"
          ]
        },
        "install": {
          "commands": [
            "yarn install --frozen-lockfile"
          ]
        },
        "build": {
          "commands": [
            "yarn build"
          ]
        },
        "start": {
          "cmd": "yarn start"
        }
      }
    }
  }
}
